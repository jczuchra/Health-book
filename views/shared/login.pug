extends ../head.pug  

block head
    link(href="css/login.css" rel="stylesheet")        
    title Health book - Login

block content
    .container.login-body
        .row
            form(action="/login" method="POST")
                .col.offset-l3.offset-s1.l6.s10.input-field
                    .row.login-input-container
                        .col.offset-s1.s10.input-field
                            h4.center Login
                        .col.offset-s1.s10.input-field
                            i.material-icons.prefix email
                            input(type="email" name="email" required)
                            label(for="email") Email
                        .col.offset-s1.s10.input-field
                            i.material-icons.prefix vpn_key
                            input(type="password" name="password" required)
                            label(for="password") Password
                        .col.offset-s1.s10.input-field.center
                            input(type="submit", value="Login").btn.blue.darken-1
                        if loginFail
                            h6.red-text.center Incorrect login or password.
                        .col.offset-s1.s10.input-field
                            a(href="#") Don't remember your password?
                        .col.offset-s1.s10.input-field
                            a(href="/register") Don't have an account yet?


