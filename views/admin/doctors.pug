extends ../head.pug

block head
    title Health book - doctors
block content
    body.primary-background
        include menu.pug
        .container
            table.striped.highlight.responsive-table
                tr
                    th Name
                    th Surname
                    th Phone
                    th Email
                    th NPWZ 
                    th  
                each doctor in doctors
                    tr
                        td  #{doctor.name}
                        td  #{doctor.surname}
                        td  #{doctor.phone}
                        td  #{doctor.email}
                        td  #{doctor.NPWZ}
                        td
                            .buttons-container
                                form(action="/doctors", method="post")
                                    input(type="hidden", name="doctorId" value=doctor.idDD)
                                    input(type="submit", value="delete").delete.material-icons
                                form(action="/doctor-edit", method="get")
                                    input(type="hidden", name="editId" value=doctor.idDD)
                                    input(type="submit", value="border_color").delete.material-icons
            .row
                .col.l12
                    a(href="/add-doctor").btn-floating.blue.darken-3.right 
                        i.material-icons add